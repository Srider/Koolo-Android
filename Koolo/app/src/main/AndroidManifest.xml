<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.srravela.koolo" >

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.GET_TASKS"/>
    <uses-permission android:name="android.permission.MANAGE_DOCUMENTS"/>
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />

    <application
        android:name="com.example.srravela.koolo.KooloApplication"
        android:allowBackup="true"
        android:icon="@drawable/app_icon"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:theme="@style/AppTheme" >
        <supports-screens
            android:anyDensity="true"
            android:largeScreens="true"
            android:normalScreens="true"
            android:resizeable="true"
            android:smallScreens="true"
            android:xlargeScreens="true" />

        <activity
            android:name=".main.activities.KooloSplashActivity"
            android:windowSoftInputMode="adjustResize"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".main.activities.KooloMainActivity"
            android:label="@string/title_activity_koolo_main"
            android:configChanges="layoutDirection|locale">
        </activity>
        <activity
            android:name=".settings.activities.KooloSettingsActivity"
            android:label="@string/title_activity_koolo_settings"
            android:configChanges="layoutDirection|locale">
        </activity>
        <activity
            android:name=".home.activities.KooloHomeActivity"
            android:label="@string/title_activity_koolo_home"
            android:configChanges="layoutDirection|locale">
        </activity>
        <activity
            android:name=".quotes.activities.KooloQuotesActivity"
            android:windowSoftInputMode="adjustResize"

            android:label="@string/title_activity_koolo_quotes"
            android:configChanges="layoutDirection|locale">
        </activity>
        <activity
            android:name=".passcode.activities.KooloPasscodeActivity"
            android:label="@string/title_activity_koolo_passcode"
            android:configChanges="layoutDirection|locale">
        </activity>
        <activity
            android:name=".checklists.activities.KooloChecklistActivity"
            android:windowSoftInputMode="adjustResize"
            android:label="@string/title_activity_koolo_checklist"
            android:configChanges="layoutDirection|locale">
        </activity>
        <activity
            android:name=".KooloBaseActivity"
            android:windowSoftInputMode="adjustResize"
            android:label="@string/title_activity_koolo_base"
            android:configChanges="layoutDirection|locale">
        </activity>
        <activity
            android:name=".moods.activities.KooloMoodsActivity"
            android:label="@string/title_activity_koolo_moods"
            android:configChanges="layoutDirection|locale">
        </activity>
        <activity
            android:name=".background.KooloBackgroundImageActivity"
            android:label="@string/title_activity_koolo_background_image"
            android:configChanges="layoutDirection|locale">
        </activity>
        <activity
            android:name=".updates.KooloUpdatesActivity"
            android:label="@string/title_activity_koolo_updates"
            android:configChanges="layoutDirection|locale">
        </activity>
        <activity
            android:name=".contributors.KooloContributorsActivity"
            android:label="@string/title_activity_koolo_contributors"
            android:configChanges="layoutDirection|locale">
        </activity>
        <activity
            android:name=".license.KooloLicenseActivity"
            android:label="@string/title_activity_koolo_license"
            android:configChanges="layoutDirection|locale">
        </activity>
        <activity
            android:name=".review.activities.KooloReviewActivity"
            android:label="@string/title_activity_koolo_review"
            android:configChanges="layoutDirection|locale">
        </activity>
        <activity
            android:name=".humor.activities.KooloHumourActivity"
            android:label="@string/title_activity_koolo_humour"
            android:configChanges="layoutDirection|locale">
        </activity>
        <activity
            android:name=".passcode.activities.KooloPasscodeVerificationActivity"
            android:label="@string/title_activity_koolo_passcode_verification"
            android:configChanges="layoutDirection|locale">
        </activity>
    </application>

</manifest>
