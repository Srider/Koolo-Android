<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context="com.example.srravela.custompasswordapplication.KooloPasscodeFragment">

<TextView
    android:id="@+id/passkode_text"
    android:gravity="center"
    android:layout_marginTop="80dp"
    android:layout_width="match_parent"
    android:layout_height="20dp"
    android:textSize="16sp"
    android:text="Tast inn passkode"
    android:textColor="@android:color/darker_gray"/>

    <com.example.srravela.koolo.passcode.layout.DottedPasswordLayout
    android:id="@+id/dottedPassword"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_below="@+id/passkode_text"
    android:layout_margin="20dp"
    app:length="4" >
    </com.example.srravela.koolo.passcode.layout.DottedPasswordLayout>

</RelativeLayout>