<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <TextView
        android:id="@+id/calendar_date_cell"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_margin="2dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:maxLines="2"
        android:textSize="14sp"
        android:text="@string/default_calendar_date_string"
        android:textColor="@color/layby_text_color_white"
        android:background="@drawable/drawable_calendar_date_text_border"/>
    <TextView
        android:id="@+id/month_text"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_below="@+id/calendar_date_cell"
        android:maxLines="1"
        android:textSize="12sp"
        android:textColor="@color/layby_text_color_white"
        android:gravity="center"
        android:background="@android:color/transparent"/>
</RelativeLayout>