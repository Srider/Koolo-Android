<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Transparent">

    <ImageView
        android:id="@+id/home_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:scaleType="fitXY"
        android:src="@drawable/background"/>

    <ImageView
        android:id="@+id/lock_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:scaleType="fitXY"
        android:src="@drawable/lock"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:id="@+id/passcode_header"
        android:layout_below="@+id/lock_image"
        android:gravity="center_vertical|center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="18sp"
        android:text="Enter Passcode"
        android:maxLines="1"
        android:layout_weight="1"
        android:textColor="@android:color/white"/>

    <LinearLayout android:id="@+id/dialer_row_1"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:layout_below="@+id/passcode_header"
        android:layout_marginTop="10dp"
        android:weightSum="3">
        <Button
            android:layout_height="50dp"
            android:layout_width="0dp"
            android:id="@+id/digit_1_button"
            android:background="@drawable/drawable_mood_color_darkgray"
            android:layout_marginLeft="39dp"
            android:layout_marginRight="39dp"
            android:layout_marginTop="10dp"
            android:textSize="24sp"
            android:textAlignment="center"
            android:layout_weight="1"
            android:textColor="@color/White"
            android:text="1"/>

        <Button
            android:layout_height="50dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:id="@+id/digit_2_button"
            android:background="@drawable/drawable_mood_color_blue"
            android:layout_marginLeft="39dp"
            android:layout_marginRight="39dp"
            android:layout_marginTop="10dp"
            android:textSize="28sp"
            android:textAlignment="center"
            android:textColor="@color/White"
            android:text="2"/>

        <Button
            android:layout_height="50dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:id="@+id/digit_3_button"
            android:background="@drawable/drawable_mood_color_red"
            android:layout_marginLeft="39dp"
            android:layout_marginRight="39dp"
            android:layout_marginTop="10dp"
            android:textSize="28sp"
            android:textColor="@color/White"
            android:textAlignment="center"
            android:text="3"/>
    </LinearLayout>

    <LinearLayout android:id="@+id/dialer_row_2"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:layout_below="@+id/dialer_row_1"
        android:layout_marginTop="20dp"
        android:weightSum="3">
        <Button
            android:layout_height="50dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:id="@+id/digit_4_button"
            android:background="@drawable/drawable_mood_color_gray"
            android:layout_marginLeft="39dp"
            android:layout_marginRight="39dp"
            android:layout_marginTop="10dp"
            android:textSize="28sp"
            android:textAlignment="center"
            android:textColor="@color/White"
            android:text="4"/>

        <Button
            android:layout_height="50dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:id="@+id/digit_5_button"
            android:background="@drawable/drawable_mood_color_yellow"
            android:layout_marginLeft="39dp"
            android:layout_marginRight="39dp"
            android:layout_marginTop="10dp"
            android:textSize="28sp"
            android:textAlignment="center"
            android:textColor="@color/White"
            android:text="5"/>

        <Button
            android:layout_height="50dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:id="@+id/digit_6_button"
            android:background="@drawable/drawable_mood_color_theme_green"
            android:layout_marginLeft="39dp"
            android:layout_marginRight="39dp"
            android:layout_marginTop="10dp"
            android:textSize="28sp"
            android:textColor="@color/White"
            android:textAlignment="center"
            android:text="6"/>
    </LinearLayout>

    <LinearLayout android:id="@+id/dialer_row_3"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:layout_below="@+id/dialer_row_2"
        android:layout_marginTop="20dp"
        android:weightSum="3">
        <Button
            android:layout_height="50dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:id="@+id/digit_7_button"
            android:background="@drawable/drawable_mood_color_orange"
            android:layout_marginLeft="39dp"
            android:layout_marginRight="39dp"
            android:layout_marginTop="10dp"
            android:textSize="28sp"
            android:textAlignment="center"
            android:textColor="@color/White"
            android:text="7"/>

        <Button
            android:layout_height="50dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:id="@+id/digit_8_button"
            android:background="@drawable/drawable_mood_color_magenta"
            android:layout_marginLeft="39dp"
            android:layout_marginRight="39dp"
            android:layout_marginTop="10dp"
            android:textSize="28sp"
            android:textAlignment="center"
            android:textColor="@color/White"
            android:text="8"/>

        <Button
            android:layout_height="50dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:id="@+id/digit_9_button"
            android:background="@drawable/drawable_mood_color_brown"
            android:layout_marginLeft="39dp"
            android:layout_marginRight="39dp"
            android:layout_marginTop="10dp"
            android:textSize="28sp"
            android:textColor="@color/White"
            android:textAlignment="center"
            android:text="9"/>
    </LinearLayout>
    <LinearLayout android:id="@+id/dialer_row_4"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:layout_below="@+id/dialer_row_3"
        android:gravity="center_horizontal"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp">

    <Button
        android:layout_height="50dp"
        android:layout_width="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:id="@+id/digit_0_button"
        android:background="@drawable/drawable_mood_color_orange"
        android:textSize="28sp"
        android:textAlignment="center"
        android:textColor="@color/White"
        android:layout_margin="10dp"
        android:text="0" />
    </LinearLayout>
</RelativeLayout>